def tambah_barang():
    while True:
        tambah = input("masukan barang anda:")
        barang.append(tambah)
        lanjut = input("tekan Y jika lanjut:").upper()
        if lanjut == "Y":
            pass
        else :
            menu()

def hapus_barang():
    while True :
        hapus = input("masukan nama barang:")
        barang.remove(hapus)
        lanjut = input("tekan Y jika lanjut:").upper()
        if lanjut == "Y":
            pass
        else :
            menu()
